{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">

        <h1>Product</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>QrCode</th>
                <td>
                    {% set qrCode = product.qrcode %}
                    <img src="{{ qrCode }}" width="150px" />
                </td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_product_index') }}" class="btn btn-outline-primary">back to list</a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">edit</a>

        {{ include('product/_delete_form.html.twig') }}

    </div>
{% endblock %}
