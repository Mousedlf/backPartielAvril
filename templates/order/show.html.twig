{% extends 'base.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}

    <div class="container">
        <a href="{{ path('app_order_index') }}">Return to all orders</a>

        <h1>Order #{{ order.id }}</h1>
        <p>made by: {{ order.byProfile.username }}</p>
        <p>total: {{ order.total }} â‚¬</p>

        <div class="row">
            {% for item in order.orderItems %}
                <div class="col-3 card">
                    <div class="p-2 rounded-3  text-center ">
                        <div class="d-flex flex-column justify-content-between ">

                            <p class="fw-bold">{{ item.product.name }}</p>
                            <p class="">x {{ item.quantity }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
